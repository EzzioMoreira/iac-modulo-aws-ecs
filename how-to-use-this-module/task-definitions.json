[
  {
    "name": "${APP_NAME}",
    "cpu": 256,
    "memory": 256,
    "image": "${APP_IMAGE}:${APP_VERSION}",
    "essential": true,
    "portMappings": [
      {
        "containerPort": "${APP_PORT}",
        "hostPort": "${APP_PORT}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${APP_NAME}",
        "awslogs-region": "${AWS_REGION}",
        "awslogs-stream-prefix": "streaming-${APP_NAME}-${APP_VERSION}"
      }
    }
  }
]
